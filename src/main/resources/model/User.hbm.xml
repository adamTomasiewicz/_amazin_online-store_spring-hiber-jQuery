<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="online_store_app.auth.Users" table="users">
        <meta attribute="class-description">This class contains users details.</meta>
        <id name="IDUser" type="java.lang.Integer" >
            <column name="IDUser" />
            <generator class="identity"/></id>

        <!-- not-null="true" unique="true"-->
        <property name="email" type="java.lang.String">
            <column name="email" length="60"/></property>
        <property name="password" type="java.lang.String">
            <column name="password" length="60"/></property>
    </class>
</hibernate-mapping>
<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
        <class name="spring_library.model.Book" table="book">
        <meta attribute="class-description">to jest klasa Book</meta>

        <id name="IDBook" type="java.lang.Integer" column="IDBook"/>
        <property name="title" type="java.lang.String" column="title"/>
        <property name="author" type="java.lang.String" column="author"/>
    </class>
</hibernate-mapping>
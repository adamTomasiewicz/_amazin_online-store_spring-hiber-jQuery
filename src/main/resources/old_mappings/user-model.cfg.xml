<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="spring_library.model.User" table="user">
        <meta attribute="class-description">to jest klasa user</meta>

        <id name="IDUser" type="java.lang.Integer" column="IDUser"/>
        <property name="email" type="java.lang.String" column="email"/>
        <property name="password" type="java.lang.String" column="password"/>
    </class>
</hibernate-mapping>